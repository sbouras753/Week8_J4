<center>
  <%= form_tag(email_index_path, method: "post", remote: true)  do %>
  <%= submit_tag("Recevoir un email", class: "btn btn-success mb-5") %>
  <% end %>
</center>
<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Liste des emails</th>
        <th scope="col">Email sélectionné</th>
      </tr>
    </thead>
    <tbody>
      <tr scope="col">
        <td class="col-md-3">
          <table class="table table-hover">
            <tbody id="list-email">
              <% @emails.sort.reverse_each do |email| %>
                <%= render 'email', email: email %>
              <% end %>
            </tbody>
          </table>
        </td>

        <td id="show-email">

        </td>

      </tr>
    </tbody>
  </table>
</div>
